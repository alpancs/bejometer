<div id="bejometer" hidden :hidden="false" class="pink-text">
  <div v-if="inputErrors.length">
    <ul>
      <li v-for="inputError in inputErrors">{{inputError}}</li>
    </ul>
  </div>

  <div class="row">
    <div class="col l1"></div>
    <div class="col s12 m12 l5">
      <div class="input-field">
        <input type="text" v-model="name1">
        <label for="name1">Nama Orang Pertama</label>
      </div>
      <div class="input-field">
        <input type="date" class="datepicker" v-model="date1">
        <label for="date1">Tanggal Lahir</label>
      </div>
    </div>
    <div class="col s12 m12 l5">
      <div class="input-field">
        <input type="text" v-model="name2">
        <label for="name2">Nama Orang Kedua</label>
      </div>
      <div class="input-field">
        <input type="date" class="datepicker" v-model="date2">
        <label for="date2">Tanggal Lahir</label>
      </div>
    </div>
    <div class="col l1"></div>
  </div>

  <div class="center">
    <button class="btn pink waves-effect" type="button" @click="updateResult" :disabled="requesting">
      <i class="material-icons">send</i>
    </button>
  </div>

  <div v-if="result">
    <span>Person 1: {{result.person1.gender}} {{result.person1.indonesiaDay}} {{result.person1.javaDay}}</span>
    <span>Person 2: {{result.person2.gender}} {{result.person2.indonesiaDay}} {{result.person2.javaDay}}</span>
    <span>Match: {{result.match}}</span>
  </div>

  <div v-if="error">
    <span>Error {{error.response.status}} {{error.response.statusText}}</span>
  </div>

  <div v-if="shareURL">
    <span>Share:</span>
    <span>{{ shareURL }}</span>
  </div>
</div>
<script src="/javascripts/index-bejometer.js"></script>
