<!DOCTYPE html>
<html>

<head>
  <title>Pawon Bejometer</title>
  <meta name="description" content="Pawon Bejometer. Catetan kagiatane Bejometer ono ning kene.">
  <meta content="/images/bejometer.png" property="og:image">
  <meta name=viewport content="width=device-width, initial-scale=1">

  <link rel="preload" href="/stylesheets/vue-material-v0.7.1.css" onload="this.rel='stylesheet'">
  <link rel="preload" href="/stylesheets/pawon.css" onload="this.rel='stylesheet'">

  <link rel="preload" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic" onload="this.rel='stylesheet'">
  <link rel="preload" href="//fonts.googleapis.com/icon?family=Material+Icons" onload="this.rel='stylesheet'">
</head>

<body>
  <md-tabs md-fixed id="app">
    <md-tab md-icon="favorite">
      <h1>Kagiatane Bejometer</h1>
      <md-layout md-row>
        <md-layout md-flex-xsmall md-flex-small="50">
          <md-list class="md-triple-line">
            <transition-group name="list-complete" tag="p">
              <md-list-item v-for="calculation in calculations" :key="calculation._id" name="list-complete" class="list-complete-item">
                <div class="md-list-text-container">
                  <span>{{calculation.message}} {{calculations.name1}} {{calculations.name2}}</span>
                  <span>ip {{calculation.meta.ip}} | response code {{calculation.meta.statusCode}} | time {{calculation.meta.elapsedTime}}ms</span>
                  <p>user agent {{calculation.userAgent}}</p>
                </div>
                <md-divider></md-divider>
              </md-list-item>
            </transition-group>
          </md-list>
        </md-layout>
        <md-layout md-flex-xsmall md-flex-small="50">
          <md-list class="md-triple-line">
            <transition-group name="list-complete" tag="p">
              <md-list-item v-for="request in requests" :key="request._id" name="list-complete" class="list-complete-item">
                <div class="md-list-text-container">
                  <span>path {{request.meta.path}}</span>
                  <span>ip {{request.meta.ip}} | response code {{request.meta.statusCode}} | time {{request.meta.elapsedTime}}ms</span>
                  <p>user agent {{request.userAgent}}</p>
                </div>
                <md-divider></md-divider>
              </md-list-item>
            </transition-group>
          </md-list>
        </md-layout>
      </md-layout>
    </md-tab>
  </md-tabs>
</body>

<% let vuejs = production ? 'vue.min.js' : 'vue.js' %>
<script src="/javascripts/<%= vuejs %>"></script>
<script src="/javascripts/vue-material-v0.7.1.js"></script>
<script src="/javascripts/pawon.js"></script>

</html>
