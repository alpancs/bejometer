<div id="tebakgender" hidden :hidden="false" class="green-text">
  <div v-if="inputErrors.length">
    <ul>
      <li v-for="inputError in inputErrors">{{inputError}}</li>
    </ul>
  </div>

  <div class="row">
    <div class="col l3"></div>
    <div class="col s12 m12 l6">
      <div class="input-field">
        <input type="text" v-model="name">
        <label for="name">Nama</label>
      </div>
    </div>
    <div class="col l3"></div>
  </div>

  <div class="center">
    <button class="btn green waves-effect" type="button" @click="updateResult" :disabled="requesting">
      <i class="material-icons">send</i>
    </button>
  </div>

  <div v-if="result">
    <span>{{result.gender}} {{result.confidence}}</span>
  </div>

  <div v-if="error">
    <span>Error {{error.response.status}} {{error.response.statusText}}</span>
  </div>

  <div v-if="shareURL">
    <span>Share:</span>
    <span>{{ shareURL }}</span>
  </div>
</div>
