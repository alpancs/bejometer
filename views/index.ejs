<!DOCTYPE html>
<html>

<head>
  <title>Bejometer, Alat Ukur Kabegjan</title>
  <meta name="description" content="Sebagai sebuah alat ukur, Bejometer selalu memberikan hasil yang konsisten. Bejometer menghitung dengan seksama setiap detil nama dan tanggal yang dimasukkan, tidak asal mengeluarkan angka acak sebagai hasil.">
  <meta name=viewport content="width=device-width, initial-scale=1">

  <link rel="preload" href="/stylesheets/vue-material-v0.7.1.css" onload="this.rel='stylesheet'">

  <link rel="preload" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700,400italic" onload="this.rel='stylesheet'">
  <link rel="preload" href="//fonts.googleapis.com/icon?family=Material+Icons" onload="this.rel='stylesheet'">
</head>

<body>
  <div id="app">

    <%# TABS %>
    <md-tabs md-fixed>
      <md-tab md-icon="favorite_border">
        <form novalidate @submit.stop.prevent="bejometerSubmit">
          <md-input-container>
            <md-icon>person</md-icon>
            <label>Nama anda</label>
            <md-input v-model="bejometerInput.name1"></md-input>
          </md-input-container>
          <md-input-container>
            <md-icon>today</md-icon>
            <label>Tanggal lahir anda</label>
            <md-input type="date" v-model="bejometerInput.date1"></md-input>
          </md-input-container>
          <md-input-container>
            <md-icon>person</md-icon>
            <label>Nama "dia"</label>
            <md-input v-model="bejometerInput.name2"></md-input>
          </md-input-container>
          <md-input-container>
            <md-icon>today</md-icon>
            <label>Tanggal lahir "dia"</label>
            <md-input type="date" v-model="bejometerInput.date2"></md-input>
          </md-input-container>
          <md-layout md-align="center">
            <md-button id="bejometerButton" :disabled="bejometerRequesting" type="submit" class="md-raised md-primary">JODOH?</md-button>
          </md-layout>
        </form>
      </md-tab>

      <md-tab md-icon="search">
        <form novalidate @submit.stop.prevent="consultationSubmit">
          <md-input-container>
            <md-icon>person</md-icon>
            <label>Nama</label>
            <md-input v-model="consultationInput.name"></md-input>
          </md-input-container>
          <md-input-container>
            <md-icon>today</md-icon>
            <label>Tanggal lahir</label>
            <md-input type="date" v-model="consultationInput.date"></md-input>
          </md-input-container>
          <md-layout md-align="center">
            <md-button id="consultationButton" :disabled="consultationRequesting" type="submit" class="md-raised md-primary">KONSULTASI</md-button>
          </md-layout>
        </form>
      </md-tab>

      <md-tab md-icon="wc">
        <form novalidate @submit.stop.prevent="tebakgenderSubmit">
          <md-input-container>
            <md-icon>person</md-icon>
            <label>Nama</label>
            <md-input v-model="tebakgenderInput.name"></md-input>
          </md-input-container>
          <md-layout md-align="center">
            <md-button id="tebakgenderButton" :disabled="tebakgenderRequesting" type="submit" class="md-raised md-primary">TEBAK GENDER</md-button>
          </md-layout>
        </form>
      </md-tab>
    </md-tabs>

    <%# RESULTS %>
    <md-dialog md-open-from="#bejometerButton" md-close-to="#bejometerButton" ref="bejometerResult">
      <md-dialog-title>Hasil Bejometer</md-dialog-title>
      <md-dialog-content>
        <md-spinner v-if="bejometerRequesting" md-indeterminate></md-spinner>
        <md-layout v-if="bejometerResult">
          match: {{bejometerResult.match}}. share URL: {{bejometerShareURL}}
        </md-layout>
        <md-layout v-if="bejometerError">
          error: {{bejometerError}}
        </md-layout>
      </md-dialog-content>
      <md-dialog-actions>
        <md-button class="md-primary" @click.native="closeDialog('bejometerResult')">Tutup</md-button>
      </md-dialog-actions>
    </md-dialog>

    <md-dialog md-open-from="#consultationButton" md-close-to="#consultationButton" ref="consultationResult">
      <md-dialog-title>Hasil Konsultasi</md-dialog-title>
      <md-dialog-content>
        <md-spinner v-if="consultationRequesting" md-indeterminate></md-spinner>
        <md-layout v-if="consultationResult">
          <md-list>
            <md-list-item v-for="result in consultationResult">
              {{result}}
            </md-list-item>
          </md-list>
          share URL: {{consultationShareURL}}
        </md-layout>
        <md-layout v-if="consultationError">
          error: {{consultationError}}
        </md-layout>
      </md-dialog-content>
      <md-dialog-actions>
        <md-button class="md-primary" @click.native="closeDialog('consultationResult')">Tutup</md-button>
      </md-dialog-actions>
    </md-dialog>

    <md-dialog md-open-from="#tebakgenderButton" md-close-to="#tebakgenderButton" ref="tebakgenderResult">
      <md-dialog-title>Hasil Tebakgender</md-dialog-title>
      <md-dialog-content>
        <md-spinner v-if="tebakgenderRequesting" md-indeterminate></md-spinner>
        <md-layout v-if="tebakgenderResult">
          gender: {{tebakgenderResult.gender}}. share URL: {{tebakgenderShareURL}}
        </md-layout>
        <md-layout v-if="tebakgenderError">
          error: {{tebakgenderError}}
        </md-layout>
      </md-dialog-content>
      <md-dialog-actions>
        <md-button class="md-primary" @click.native="closeDialog('tebakgenderResult')">Tutup</md-button>
      </md-dialog-actions>
    </md-dialog>
  </div>
</body>

<% let vuejs = production ? 'vue.min.js' : 'vue.js' %>
<script src="/javascripts/<%= vuejs %>"></script>
<script src="/javascripts/vue-material-v0.7.1.js"></script>
<script async src="/javascripts/index.js"></script>
<script async src="/javascripts/axios.min.js"></script>

</html>
